@{
    ViewData["Title"] = "Edit";
}

@model MyFAQEnhanced.Models.FAQ;

<h1>Edit</h1>
<h4>FAQ</h4>
<div class="container border-top mt-3 p-0">
    <div class="row mt-2">
        <div class="col-md-5">
            <form asp-action="Edit">
                <input type="hidden" asp-for="FAQId" />
                <div class="form-group mt-3">
                    <label asp-for="Question" class="control-label"></label>
                    <input asp-for="Question" class="form-control mt-2" />
                    <span asp-validation-for="Question" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Answer" class="control-label"></label>
                    <input asp-for="Answer" class="form-control mt-2" />
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="TopicId" class="control-label">Topic</label>
                    <select asp-for="TopicId" class="form-control form-select mt-2">
                        <option value="" disabled>select a topic</option>
                        @foreach (Topic t in ViewBag.Topics)
                        {
                            <option value="@t.TopicId">@t.Name</option>
                        }
                    </select>
                    <span asp-validation-for="TopicId" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="CategoryId" class="control-label">Category</label>
                    <select asp-for="CategoryId" class="form-control form-select mt-2">
                        <option value="" disabled>select a category</option>
                        @foreach (Category c in ViewBag.Categories)
                        {
                            <option value="@c.CategoryId">@c.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <div class="form-group mt-3">
                    <a asp-action="Index">Back To List</a>
                </div>
            </form>
        </div>
    </div>
</div>


